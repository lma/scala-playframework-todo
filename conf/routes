# Routes
GET     /tasks                      controllers.TaskController.getAll
GET     /tasks/:id                  controllers.TaskController.getById(id: Long)
POST    /tasks                      controllers.TaskController.create
PUT     /tasks/:id                  controllers.TaskController.update(id: Long)
DELETE  /tasks/:id                  controllers.TaskController.delete(id: Long)
GET     /categories                 controllers.TaskController.categories

GET     /extApi                     controllers.ExternalApiController.extApi

GET     /events                     controllers.WebSocketTaskController.events
GET     /socket                     controllers.WebSocketTaskController.socket
